<h1>Search</h1>
<%= form_with url: '/search', method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit 'Search' %>
<% end %>

<% if @results != nil %>
  <% @results.each_with_index do |result, i| %>
    <p><%= "#{i+1}: #{result[:show][:name]}" %><p>
    <%= button_to "Add #{i+1}: #{result[:show][:name]}", '/shows', params: { show_id: result[:show][:id] } %>
  <% end %>
<% end %>